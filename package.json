{
  "name": "hopverk2",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "browser-sync": "browser-sync start --server --files ./src/ styles.css index.html",
    "sass": "sass styles.scss styles.css",
    "sass-watch": "sass --watch *.scss styles.css",
    "dev": "concurrently npm:sass-watch npm:browser-sync",
    "stylelint": "stylelint styles.css ./**/*.scss",
    "eslint": "eslint ./**/*.js",
    "lint": "concurrently npm:eslint npm:stylelint",
    "prettier": "prettier --write .",
    "copy:html": "cpy ./*.html ./build/",
    "copy:js": "cpy ./src/*.js ./src/lib/*.js ./build/",
    "copy:css": "cpy ./*styles.css ./build/",
    "copy:jpg": "cpy ./images ./build",
    "build": "concurrently npm:copy:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "daisyui": "^4.0.5",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "dependencies": {
    "sass": "^1.69.5"
  }
}
