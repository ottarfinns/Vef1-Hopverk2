{
  "name": "hopverk2",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "dev": "browser-sync start --server --files ./src/ styles.css index.html && tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "lint": "eslint ./**/*.js",
    "prettier": "prettier --write .",
    "copy:html": "cpy ./*.html ./build/",
    "copy:js": "cpy ./src/*.js ./src/lib/*.js ./build/",
    "copy:css": "cpy ./*.css ./build/",
    "build": "concurrently npm:copy:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5"
  }
}
